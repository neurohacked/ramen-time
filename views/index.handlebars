<div class="container">
    <div class="jumbotron">
        <img class="ramen-time center-block" src="../../assets/img/rt.png" alt="" />
        <button type="button" class="ramen-btn btn btn-lg btn-primary center-block" data-toggle="modal" data-target=".ramenModal">Create Some Ramen to Eat</button>
    </div>

    <div class="row">
        <div class="col col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">Ramen Available to Eat</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        {{#each ramen}}
                            {{#unless this.devoured}}
                                <div class="ramen col col-lg-6">
                                    <div class="well">
                                        <div class="media">
                                            <div class="media-left media-middle">
                                                <img class="ramen-bowl img-responsive" src="{{this.image}}" alt="Bowl of Ramen">
                                            </div>
                                            <div class="media-body">
                                                <h4 class="ramen-name media-heading text-center">{{this.name}}</h4>
                                                <form action="ramen/devour/{{this.id}}?_method=PUT" method="POST">
                                                    <input type="hidden" name="devoured" value="true">
                                                    <button class="btn btn-sm btn-success center-block" type="submit">Devour It!</button>
                                                </form>
                                                <form action="ramen/scrap/{{this.id}}?_method=DELETE" method="POST">
                                                    <input type="hidden" name="id" value="{{this.id}}">
                                                    <button class="btn btn-sm btn-danger center-block" type="submit">Scrap</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {{/unless}}
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        <div class="col col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">Devoured Ramen</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        {{#each ramen}}
                            {{#if this.devoured}}
                                <div class="ramen col col-lg-6">
                                    <div class="well">
                                        <div class="media">
                                            <div class="media-left media-middle">
                                                <img class="ramen-bowl media-object" src="{{this.image}}" alt="Bowl of Ramen">
                                            </div>
                                            <div class="media-body">
                                                <h4 class="ramen-name media-heading text-center">{{this.name}}</h4>
                                                <form action="ramen/scrap/{{this.id}}?_method=DELETE" method="POST">
                                                    <input type="hidden" name="id" value="{{this.id}}">
                                                    <button class="btn btn-sm btn-warning center-block" type="submit">Clear</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {{/if}}
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        <!-- Create Ramen Modal -->
        <div class="modal fade ramenModal" tabindex="-1" role="dialog" aria-labelledby="ramenModal">
            <div class="modal-dialog" role="document">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h5 class="modal-title">Create Ramen</h5>
                    </div>
                    <form class="create-update-form" action="ramen/create" method="POST">
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="ramen">Ramen Name</label><br>
                                <input type="text" class="form-control" id="ramen" name="name" placeholder="Enter a name for your ramen. Yes, there is more than one type of ramen...">
                            </div>
                            <div class="form-group">
                                <label for="image">Ramen Image</label><br>
                                <label class="radio-inline">
                                    <input type="radio" name="image" id="inlineRadio1" value="assets/img/dish001.png"><img class="ramen-bowl" src="assets/img/dish001.png" alt="Bowl of Ramen #1">
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" name="image" id="inlineRadio2" value="assets/img/dish002.png"><img class="ramen-bowl" src="assets/img/dish002.png" alt="Bowl of Ramen #2">
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" name="image" id="inlineRadio3" value="assets/img/dish003.png"><img class="ramen-bowl" src="assets/img/dish003.png" alt="Bow of Ramen #3">
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" name="image" id="inlineRadio4" value="assets/img/dish004.png"><img class="ramen-bowl" src="assets/img/dish004.png" alt="Bow of Ramen #4">
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" name="image" id="inlineRadio5" value="assets/img/dish005.png"><img class="ramen-bowl" src="assets/img/dish005.png" alt="Bow of Ramen #5">
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" name="image" id="inlineRadio6" value="assets/img/dish006.png"><img class="ramen-bowl" src="assets/img/dish006.png" alt="Bow of Ramen #6">
                                </label>
                            </div>
                            <div class="form-group">
                                <input type="hidden" name="devoured" value="0">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-md btn-success" type="submit">Confirm</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
